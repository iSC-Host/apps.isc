/*
    Styles for the global site header.
*/
@import 'lib';

// Add header's height back as padding. Overridden when header not fixed.
body {
    padding-top: $header-height;
}

// Usable on any header.
.header {
    background: $white;
    border-top: 1px solid $salt-flat-white;
    border-bottom: 1px solid $seavan-salt-white;
    display-flex();
    height: $header-height;
    max-height: $header-height;
    position: relative;
    width: 100%;

    > * {
        flex-center();
    }
    .flex-shift, .title {
        flex(1);
        padding-left: 10px;
    }
    .title {
        color: $castle-skull-gray;
        font-size: 18px;
        font-weight: 400;
        line-height: $header-height;
        z-index: 10;
    }
}

// # for the primary site header *only*.
// If you need to generalize a style in here, move it.
.site-header {
    display: block;
    position: fixed;
    text-align: center;
    top: 0;
    z-index: 20;

    &:before {
        display: none;
    }
    > * {
        display: block;
    }
    > nav {
        height: $header-height;
        display-flex();
        position: relative;
        text-align: left;
        width: 100%;

        > * {
            flex-center();
            display: block;
        }
    }
    .site {
        height: $header-height;
        margin: 0 5px;
        width: 200px;

        a {
            display: block;
            height: 47px;
            hidetext();
            width: 100%;
        }
    }
    .wordmark {
        background: url(../img/pretty/marketplace_logo.png) 0 50% no-repeat;
        background-size: auto 37px;
        display: block;
        height: 47px;
    }
    .header-button {
        display: none;
    }
}

.act-tray {
    height: 47px;
    position: relative;
    width: 34px;  // 24px + 10px margin
}

.site-header .search {
    margin-right: 10px;
    position: relative;
    top: -1px;
    transition(.3s all);
    width: 230px;

    label {
        display: none;
    }
}

#search-q {
    background: $white url(../img/pretty/search.svg) 8px 50% no-repeat;
    border: 1px solid $greyscale-white-tapped;
    border-radius: 5px;
    color: $greyscale-black;
    font: 300 20px/28px $open-stack;
    height: 34px;
    outline: none;
    padding: 2px 10px 1px 34px;
    transition(unquote('.18s background-position, .2s border-color, .2s padding'));
    width: 100%;
    z-index: 2;

    &:-moz-placeholder {
        color: $greyscale-grey;
    }
    &::-moz-placeholder {
        color: $greyscale-grey;
    }
    &::-webkit-input-placeholder {
        color: $greyscale-grey;
    }
    ~ .search-clear {
        transition(unquote('.3s opacity, .3s visibility'));
    }
    &:invalid ~ .search-clear {
        // Hide the X icon when the search field is empty.
        opacity: 0;
        visibility: hidden;
    }
    &:valid {
        // Pad for the X icon.
        padding-right: 34px;
        ~ .search-clear {
            opacity: 1;
            visibility: visible;
        }
    }
    &:focus {
        background-position: -18px 50%;
        border-color: $action-positive;
        padding-left: 10px;
    }
}

.close {
    background: url(../img/pretty/close.svg) 50% no-repeat;
    background-size: 18px auto;
    height: 34px;
    hidetext();
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
}

.close:active {
    background: url(../img/pretty/close_active.svg) 50% no-repeat;
}

// Buttons that appear in headers.
.header-button {
    color: $castle-skull-gray;
    display: block;
    height: $header-height;
    line-height: $header-height;
    text-align: center;
    width: $header-height;  // $header-height so it's square.

    // header buttons with icons
    &.icon {
        position: relative;
        hidetext();
        &:after {
            background-repeat: no-repeat;
            content: "";
            display: block;
        }
    }
    &.cancel:after {
        background-position: 0 -24px;
        height: 24px;
        left: 13px;
        position: absolute;
        top: 12px;
        width: 24px;
    }
    &.settings {
        background: url(../img/pretty/settings_gear.svg) 50% 50% no-repeat;
        background-size: 24px auto;
        display: block;
        height: 80px;
        position: absolute;
        right: 20px;
        width: 40px;
    }
    &.back {
        hidetext();
        background: url(../img/pretty/back_arrow.svg) center no-repeat;
        background-size: 12px 24px;
        margin-right: 2px;
        width: 50px;
        &:hover {
            background-image: url(../img/pretty/back_arrow_active.svg);
        }
    }
    &.persona {
        // 'Sign In' or 'Register'.
        color: $action-positive;
        font-weight: 500;
        cursor: wait;
        display: none;
        margin-left: 15px;
        word-break: keep-all;
        word-wrap: normal;

        &:hover {
            color: $action-positive-hover;
            text-decoration: none;
        }
        &.loading-submit {
            border-bottom: 0;
            box-shadow: none;
            // Make text transparent to keep the width the same.
            color: transparent;
            outline: 0;
            spinner('loading');
            margin-left: 15px;
            width: auto;

            &:after {
                display: none;
            }
        }
    }
}

.persona-loaded .header-button.persona {
    cursor: pointer;
}

.header-button.persona {
    width: auto;
}

.subheader {
    h1,
    a {
        line-height: 37px;
        padding: 10px;
    }
}

.secondary-header,
.featured-header {
    position: relative;

    h2, h3 {
        color: $greyscale-black;
        font-weight: 300;
        margin-bottom: -3px;
        max-width: calc(unquote('100% - 75px'));
        min-width: 70%;
        padding-bottom: 3px;
        position: absolute;
    }
}

.category.featured {
    position: relative;
}

.secondary-header {
    background: $salt-flat-white;
    border-top: 1px solid $seavan-salt-white;
    margin-top: -1px;
    z-index: 19;

    &:before {
        // Because box-shadows can go suck it.
        bottom: -2px;
        content: "";
        display: block;
        gradientLinear(unquote('to top, rgba(15,15,15,0) 0%, rgba(15,15,15,.3) 100%'));
        height: 2px;
        position: absolute;
        width: 100%;
        z-index: 1;
    }
    .subtitle {
        color: $earl-gray;
        font-size: 20px;
        font-weight: 300;

        &:before {
            content: "\00a0/\00a0";
            color: darken($seavan-salt-white, 4%);
            font-size: 30px;
        }
    }
}

.featured-header {
    padding: 5px 10px 25px;

    h3 {
        font-size: 20px;
        line-height: 20px;
    }
}

.featured .featured-header {
    padding-top: 15px;
}

.site-header .account-links,  // .site-header for specificity
.active .account-links {
    display: none;
}

// When holding down on debug page, don't allow clicking logo to go back home.
[data-page-type~=debug] .header .wordmark {
    pointer-events: none;
}

[data-page-type~=search],
[data-page-type~=leaf] {
    .back, .expand {
        display: block;
    }
    .site, .flex-shift {
        display: none;
    }
    .flex-span {
        display: block;
        flex(1);
    }
}

@media (max-width: 540px) {
    // TODO: get rid of this media query.
    .site-header {
        .search {
            flex(1);
            width: auto;
        }
    }
    [data-page-type~=root] {
        .site-header {
            .site, .wordmark {
                width: 35px;
            }
            .flex-shift {
                display: none;
            }
        }
    }
    [data-page-type~=search],
    [data-page-type~=leaf] {
        .flex-span {
            display: none;
        }
    }

    .site-header.suggestions {
        nav > *:not(.search) {
            display: none;
        }
        .search {
            position: relative;
            width: 100%;
            left: auto;
        }
        .search-clear {
            display: block;
        }
    }
}

@media (max-width: 709px) {
    [data-page-type~="detail"] .header {
        // Make the border lighter since there's no secondary header on this page.
        border-bottom-color: $salt-flat-white;
    }
}

@media $narrower-than-desktop {
    .secondary-header {
        height: 40px;

        h2 {
            font-size: 15px;
            line-height: 40px;
            margin: 0 10px;
        }
        .subtitle, .subtitle:before {
            font-size: 15px;
        }
        .subtitle {
            font-weight: 400;
        }
    }
    .featured .featured-header {
        padding-bottom: 20px;
    }
}

@media (min-width: 710px) {
    .site-header {
        border-bottom: 1px solid $cloud-gray;
        border-top: 0;

        &:before, &:after {
            display: none;
        }
    }
    [data-page-type] main {
        &:before {
            display: none;
        }
    }
}

@media $base-tablet {
    .subheader {
        h1,
        a {
            line-height: 1;
            margin: 40px 0 30px;
            padding: 0 10px;
        }
    }
    .secondary-header {
        background: none;
        border: 0;
        height: $header-height;
        max-height: $header-height;
        padding: 0;
        position: relative;

        &:before {
            display: none;
        }
        h2 {
            margin: 0;
            padding: 0;
        }
    }
    header.secondary-header {
        margin: 10px auto 20px;
        width: $max-site-width;

        h2 {
            font-size: 30px;
        }
    }
    .featured-header {
        padding: 15px 15px 5px;
    }
    .site-header {
        z-index: 30;
    }
    body {
      padding-top: 0;
    }
    .site-header {
        height: 60px;
        max-height: 60px;
        position: relative;

        > nav {
            height: 60px;
            margin: 0 auto;
            max-width: $max-site-width;
            width: 95%;
        }
        .site {
            margin: 0;
            width: 232px;
        }
        .site, .site a, .wordmark {
            height: 60px;
        }
        .wordmark {
            background-position: -5px 50%;
            background-size: auto 46px;
            max-width: 232px;
            width: 232px;
        }
        .persona {
            display: block;
        }
        .act-tray {
            display: none;
        }
    }
    .logged-in .site-header {
        .act-tray {
            display: block;
        }
        .persona {
            display: none;
        }
    }
    .active .account-links {
        display: block;
    }
    .site-header .search,
    #search-q {
        width: 270px;
    }
    #search-q {
        background-position: 10px 50%;
        border-width: 1px;
        font-size: 18px;
        height: 46px;
        line-height: 40px;
        padding: 6px 15px 4px 34px;

        &:valid {
            // Adjust width for padding for the X icon.
            padding-right: 42px;
        }
        &:focus {
            padding-right: 15px;
        }
    }
    .search-clear {
        top: 6px;
    }
    // How does the header look for the various page "types"?
    [data-page-type~=search],
    [data-page-type~=leaf] {
        .back,
        .site {
            display: block;
        }
        .back,
        .flex-span {
            display: none;
        }
        .flex-shift {
            display: block;
        }
    }
    .desktop .wordmark {
        background: url(../img/pretty/marketplace-beta-logo.png) no-repeat 0 50% / 231px auto;
    }
}

@media $base-desktop {
    .site-header .search,
    #search-q {
        width: 340px;
    }
    .subheader {
        // Offset #page padding.
        margin-top: -18px;

        h1,
        a {
            padding: 0;
        }
    }
}

@media $retina-tablet {
    .desktop .wordmark {
        background: url(../img/pretty/marketplace-beta-logo2X.png) no-repeat 0 50% / 231px auto;
    }
}
