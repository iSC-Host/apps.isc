// Styles for the categories index page.
@import 'lib';

.category-index {
    margin-top: 20px;
    text-align: center;
    width: 100%;

    a {
        display: inline-block;
        height: 90px;
        margin: 0 8px 20px;
        width: 90px;
    }
    .cat-icon {
        border: 1px solid $greyscale-light-grey-tapped;
        border-radius: 65px;
        color: $greyscale-grey;
        display: inline-block;
        height: 50px;
        position: relative;
        vertical-align: middle;
        width: 50px;

        &:before {
            background-size: 90px;
            display: inline-block;
            height: 30px;
            left: 5px;
            position: relative;
            top: unquote('calc(50% - 15px)');
            width: 30px;
        }
        p {
            color: $greyscale-black;
            font-size: 11px;
            position: relative;
            right: 40%;
            text-align: center;
            text-transform: uppercase;
            top: 25px;
            width: 180%;
        }
    }
}

.category .app-list {
    margin-top: 0;
}

.category .app-list-filters-sort {
    display: inline-block;
}

.category .app-list-filters {
    min-height: 80px;
}

.category .compat-filter {
    top: 60px;
}

@media $base-tablet {
    .category .app-list {
        margin-top: 30px;
    }
    .mobile-cat-header {
        display: none;
    }
    .desktop-cat-header {
        display: block;
    }
    .subheader.cat-header h1 {
        margin: 0;
        padding: 20px 0;
    }
    .cat-header .cat-icon:before {
        background-color: $action-positive;
        background-size: 180px auto;
        border-radius: 50px;
        height: 75px;
        margin: 0 20px;
        width: 75px;
    }
    .category-header-desktop {
        margin: 0 auto 20px;
        width: $desktop-content;
    }
    .category-header {
        background: none;
        padding: 0;
        margin: 0 0 15px;
        text-align: left;
        width: auto;

        h3 {
            color: $greyscale-black;
            font-size: 30px;
            font-weight: 300;
            text-shadow: 0 1px 0 $greyscale-light-grey;
        }
    }
}

@media $base-desktop {
    .cat-header .cat-icon:before {
        margin-left: 0;
    }
}
