/*
    Stylesheet for category icon using the spritesheet.
    Defines the classes for each individual icon as well as its applications
    within pages.
*/
@import 'lib';

$cat-icon-size-default = 28px;

sprite-background-position($vertical-pos) {
    // Handles which color sprite to show on which pages.
    // White.
    &.cat-hovercat:hover:before {
        // Icons in category drop-down menu when hovered.
        background-position: 100% $vertical-pos;
    }

    // Blue.
    &:before,
    &.cat-hovercat:before,
    &.category-header-icon:before {
        // The icons in category drop-down menu.
        background-position: 0 $vertical-pos;
    }
}

sprite-background-position-header($vertical-pos) {
    // White.
    // 75px icon in category header, which needs to be centered.
    // Have to define separately from sprite-background-position since they
    // align differently in this case.
    @media $base-tablet {
        &.category-header-icon:before {
            background-position: 107% $vertical-pos;
        }
    }
}

.cat-icon {
    &:before {
        // Default to 'all' icon.
        background: url(../img/pretty/cats-sprite.svg) no-repeat 50% 93.8%;
        background-size: 3*$cat-icon-size-default;
        content: '';
        display: inline-block;
        height: $cat-icon-size-default;
        margin: 0 10px 0 0;
        vertical-align: middle;
        width: $cat-icon-size-default;
    }

    sprite-background-position(93.8%);

    // Other styles for `.cat-hovercat` are in `category-dropdown-desktop.styl`.
    &.cat-hovercat {
        &:before {
            background: url(../img/pretty/cats-sprite.svg) no-repeat;
            background-size: 90px auto;
            content: "";
            height: 30px;
            left: 15px;
            position: absolute;
            top: 10px;
            width: 30px;
        }
    }
}

