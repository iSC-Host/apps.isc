@import 'lib';

$support-nav-height = 55px;

// TODO: Nuke ID-based selectors here.
#site-footer {
    display: none;
}

@media $base-tablet {
    #footzilla {
        background: url(../img/logos/footzilla.svg) no-repeat;
        float: left;

        a {
            display: block;
            height: 31px;
            hidetext();
            width: 115px;
        }
    }

    #footer {
        background: $white;
        border-top: 1px solid $cloud-gray;
        color: $greyscale-grey;
        overflow: hidden;
        padding: 20px 0;
        width: 100%;

        .pad {
            padding: 22px 0 0;
        }
        p, ul {
            line-height: 1.3;
            margin: 0;
            padding-left: 1em;
        }
        ul {
            list-style: none;
        }
        p {
            float: left;
            font-size: 16px;
            width: 60%;
        }
        ul:not(.support-navigation) {
            float: right;
            font-size: 14px;
            line-height: 1.3;
            width: 20%;

            a {
                display: block;
            }
        }
        li + li {
            margin-top: 2px;
        }
        .pad,
        .support-navigation {
            margin: 0 auto;
        }
        .support-navigation {
            align-items: baseline;
            border-bottom: 1px solid $footer-border;
            display-flex();
            height: $support-nav-height;
            margin-top: -20px;
            max-width: 100%;
            padding: 0;
            text-align: center;

            li {
                flex-grow(1);
                font-size: 17px;
                font-weight: 500;
                line-height: $support-nav-height;
            }
        }
    }

    #site-footer {
        display: block;
    }
}

@media $wide-desktop {
    #footer .pad {
        width: $desktop-content;
    }
}
